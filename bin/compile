#!/usr/bin/env ruby
require "rake"
require "fileutils"
require "shellwords"

include FileUtils

ARGV.each do |path|
  if File.exists?("app/#{path}")
    puts "compile #{path}"
    mkdir_p File.dirname("docs/#{path}")
    case File.extname(path)
    when ".haml"
      html = path.gsub(/\.haml/, ".html")
      sh "haml -r ./lib/helpers.rb app/#{path.shellescape} > docs/#{html.shellescape}"
    when ".css"
      sh "haml -r ./lib/helpers.rb app/index.haml > docs/index.html"
    when ".js"
      sh "webpack"
    else
      cp "app/#{path}", "docs/#{path}"
    end
  else
    puts "removed #{path}"
    case File.extname(path)
    when ".haml"
      html = path.gsub(/\.haml/, ".html")
      rm_rf "docs/#{html}"
    else
      rm_rf "docs/#{path}"
    end
  end
end
